@{
    Layout = "_Layout";
}

<!Doctype html>
<div class="centerWindow">
    <h2> Registration</h2>
    <form method="post">
        <table>
            <tr>
                <td>Login:</td>
                <td><input type="text" class="searchbar" name="UserLogin" maxlength="25" required /></td>
            </tr>
            <tr>
                <td>Password:</td>
                <td><input type="text" class="searchbar" name="Password" maxlength="15" required /></td>
            </tr>
            <tr>
                <td>Email:</td>
                <td><input type="text" class="searchbar" pattern="[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*@@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?" required name="Email" /></td>
            </tr>
            <tr><td><input type="submit" class="bubbly-button" value="Register" /></td></tr>
        </table>
    </form>
</div>
